# === DATABASE ===
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=insurance_leads

# === META API ===
# REQUIRED: Add your Meta Page ID
# Get from: https://business.facebook.com/settings/apps?tab=owned
META_PAGE_ID=your_page_id_here

# REQUIRED: Add your Meta long-lived Page Access Token
# Permissions needed: leads_retrieval, read_insights, read_page_mailboxes
# Get from: https://developers.facebook.com/docs/facebook-login/access-tokens
META_PAGE_ACCESS_TOKEN=your_long_lived_token_here

# REQUIRED: Add your Meta Lead Form ID
# Get from: Meta Ads Manager > Lead Ads > Select Form
META_FORM_ID=your_form_id_here

# OPTIONAL: Add your Meta App Secret (for webhook verification)
# Get from: https://developers.facebook.com/apps/
META_APP_SECRET=your_app_secret_here

# === API ===
API_PORT=3000
API_DEBUG=False
API_HOST=127.0.0.1

# === ENVIRONMENT ===
ENVIRONMENT=development