# DATABASE CONFIGURATION
# For LOCAL: Use localhost
# For RENDER: Use Render's MySQL add-on connection details
MYSQL_HOST=your-render-mysql-host.onrender.com
MYSQL_PORT=3306
MYSQL_USER=admin
MYSQL_PASSWORD=your_secure_password
MYSQL_DATABASE=insurance_leads

# FLASK CONFIGURATION
# Flask automatically uses environment PORT on Render
FLASK_PORT=3001
FLASK_DEBUG=False

# META API CREDENTIALS (Optional - if using Meta Lead Forms)
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_PAGE_ID=your_page_id
META_PAGE_ACCESS_TOKEN=your_access_token
META_LEAD_FORM_ID=your_form_id
